{
	"manifest_version" : 2,
	"name" : "jeforth.3ce",
	"description" : "jeforth.3we for Chrome Extension",
	"version" : "1.0",
	"browser_action" : {
		"default_icon" : "3ce/fig.tw16x16.png",
		"default_popup" : "jeforth.3ce.html"
	},
	"content_security_policy" : "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions" : [
		"activeTab", "http://*/*", "https://*/*"
	]
}

